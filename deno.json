{
  "name": "@fudapop/hanafuda-js",
  "version": "0.0.1",
  "description": "A modular JavaScript library for implementing Hanafuda card games, with a focus on Koi-Koi.",
  "tasks": {
    "dev": "deno run --watch main.js",
    "test": "deno test"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "exports": {
    ".": "./src/core/index.ts",
    "./core": "./src/core/index.ts",
    "./scoring": "./src/scoring/index.ts",
    "./koikoi": "./src/koikoi/index.ts"
  },
  "publish": {
    "exclude": ["**/README.md", "src/example/", "tests/"]
  }
}
